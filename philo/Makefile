		@echo $(YELLOW)"type "$(LIGHT_YELLOW)"\`./philo <args>\`"$(YELLOW)" to start the program!"$(NOCOLOR)

%.o:%.c 
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@rm -f $(OBJS)
	@echo $(BLUE)"Object files removed"$(NOCOLOR)

fclean: clean
	@rm -f $(NAME)
	@echo $(YELLOW)"$(NAME) removed"$(NOCOLOR)

re: fclean all

.PHONY: clean